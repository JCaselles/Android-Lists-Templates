<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<TextView
    android:id="@+id/first_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="5dp"
    />
<TextView
    android:id="@+id/second_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="5dp"
    />

<!--
     third_view is clickable: declares an onClick method 'congratuleMe'.
     In order to be able to click a TextView 'clickable' attribute is needed.
  -->
<TextView
    android:id="@+id/third_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="5dp"
    android:clickable="true"
    android:onClick="congratuleMe"
    />
<TextView
    android:id="@+id/fourth_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="5dp"
    />
<Button
    android:id="@+id/delete_button"
    android:layout_width="wrap_content"
    android:minWidth="60dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:onClick="removeRow"
    android:text="Remove"
    android:singleLine="true"
    />
</LinearLayout>

